{
  "name": "java_tdd",
  "version": "1.0.0",
  "description": "Biblioteca do curso Java TDD",
  "main": "index.js",
  "scripts": {
    "lint": "node_modules/.bin/eslint src/js/*.js",
    "prepush": "npm run lint && npm run test:coverage",
    "test": "./node_modules/mocha/bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "./node_modules/mocha/bin/mocha tests/**/*.spec.js --require babel-register --watch",
    "test:coverage": "nyc npm test"
  },
  "nyc": {
    "functions":80,
    "lines":80,
    "check-coverage":true,
    "reporter": ["text","html"],
    "exclude": ["tests/**"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wagnermattos/udemy-js-tdd-course.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "author": "Wagner Mattos <wagner_mattos@msn.com> (https://wgnr8.com.br/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wagnermattos/udemy-js-tdd-course/issues"
  },
  "homepage": "https://github.com/wagnermattos/udemy-js-tdd-course#readme",
  "devDependencies": {
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "husky": "^1.0.0-rc.9",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2"
  }
}
